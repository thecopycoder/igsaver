    <section id="Contacts" class="contacts gradient-bg">
      <div class="container">
        <div class="left">
         <img src="image/png.png">
         </div>
        <div class="right">
          <form>
            <h1>LEAVE A MESSAGE</h1>

            <div class="input-group">
              <label for="name">Name</label>
              <input 
               id="name"
               type="text"
               class="input" 
               placeholder="Enter Your Name">
            </div>

            <div class="input-group">
              <label for="email">Email</label>
              <input 
               id="email"
               type="email"
               required
               class="input" 
               placeholder="Enter Your valid email">
            </div>

            <div class="input-group">
              <label for="message">Message</label>
              <textarea 
               id="message"
               class="input" 
               placeholder="Enter Your Message"
               rows="5"
               ></textarea>
            </div>
            <div class="btn-B">
              <button class="filled-btn"> Submit your Request</button>
            </div>
          </form>
        </div>
      </div>
